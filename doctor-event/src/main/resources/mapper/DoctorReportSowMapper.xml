            <if test="houbeiIn != null">AND `houbei_in` = #{houbeiIn}</if>
            <if test="otherIn != null">AND `other_in` = #{otherIn}</if>
            <if test="dailyLivestockOnHand != null">AND `daily_livestock_on_hand` = #{dailyLivestockOnHand}</if>
