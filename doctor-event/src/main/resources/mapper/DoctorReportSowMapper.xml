    </select>

    <select id="paging" parameterType="map" resultMap="DoctorReportSowMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY `id` DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="list" parameterType="map" resultMap="DoctorReportSowMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
