    <select id="findById" parameterType="long" resultMap="DoctorReportSowMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByIds" parameterType="list" resultMap="DoctorReportSowMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
