<mapper namespace="DoctorReportNpds">
    <resultMap id="DoctorReportNpdsMap" type="DoctorReportNpds">
        <id property="id" column="id"/>
        <result property="farmId" column="farm_id"/>
        <result property="sumAt" column="sum_at"/>
        <result property="npd" column="npd"/>
        <result property="sowQuantity" column="sow_quantity"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="tb">
        doctor_report_npds
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        `farm_id`, `sum_at`, `npd`, `sow_quantity`, 
        created_at, updated_at
    </sql>

    <sql id="vals">
        #{farmId}, #{sumAt}, #{npd}, #{sowQuantity}, 
        now(), now()
    </sql>

    <sql id="criteria">
        <where>
            <if test="farmId != null">AND `farm_id` = #{farmId}</if>
            <if test="sumAt != null">AND `sum_at` = #{sumAt}</if>
            <if test="npd != null">AND `npd` = #{npd}</if>
            <if test="sowQuantity != null">AND `sow_quantity` = #{sowQuantity}</if>
            <if test="createdAt != null">AND <![CDATA[created_at >= #{createdAt}]]> </if>
            <if test="updatedAt != null">AND <![CDATA[updated_at < #{updatedAt}]]> </if>
        </where>
    </sql>

    <insert id="create" parameterType="DoctorReportNpds" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <select id="findById" parameterType="long" resultMap="DoctorReportNpdsMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByIds" parameterType="list" resultMap="DoctorReportNpdsMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <update id="update" parameterType="DoctorReportNpds">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="farmId != null">`farm_id` = #{farmId},</if>
            <if test="sumAt != null">`sum_at` = #{sumAt},</if>
            <if test="npd != null">`npd` = #{npd},</if>
            <if test="sowQuantity != null">`sow_quantity` = #{sowQuantity},</if>
            updated_at = now()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM <include refid="tb"/>
        WHERE id = #{id}
    </delete>
    
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <select id="paging" parameterType="map" resultMap="DoctorReportNpdsMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY `id` DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="list" parameterType="map" resultMap="DoctorReportNpdsMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY `id` DESC
    </select>

</mapper>
