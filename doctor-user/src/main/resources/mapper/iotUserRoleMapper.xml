<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="IotUserRole">

    <resultMap id="IotUserRoleMap" type="IotUserRole">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="iot_role_id" property="iotRoleId"/>
        <result column="iot_role_name" property="iotRoleName"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        doctor_sub_roles
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        `user_id`,`iot_role_id`, iot_role_name, created_at, updated_at
    </sql>

    <sql id="vals">
        #{userId}, #{iotRoleId}, #{iotRoleName}, now(), now()
    </sql>

    <insert id="create" parameterType="IotUserRole" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <select id="findById" parameterType="long" resultMap="IotUserRoleMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </select>

    <select id="findByIds" parameterType="list" resultMap="IotUserRoleMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <update id="update" parameterType="IotUserRole">
        update
        <include refid="tb"/>
        <set>
            <if test="iotRoleId!=null">`iot_role_id` = #{iotRoleId},</if>
            <if test="iotRoleName!=null">`iot_role_name` = #{iotRoleName},</if>
            updated_at = now()
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        delete from
        <include refid="tb"/>
        where id = #{id}
    </delete>

    <sql id="criteria">
        <if test="iotRoleName != null">AND `iot_role_name` like CONCAT('%', #{iotRoleName}, '%')</if>
    </sql>


    <select id="paging" parameterType="map" resultMap="IotUserRoleMap">
        select id,
        <include refid="cols_exclude_id"/>
        from
        <include refid="tb"/>
        <where>
            <include refid="criteria"/>
        </where>
        order by `id` desc
        limit #{offset}, #{limit}
    </select>

    <select id="count" parameterType="map" resultType="long">
        select count(1) from
        <include refid="tb"/>
        <where>
            <include refid="criteria"/>
        </where>
    </select>

    <update id="updateIotRoleName" parameterType="map">
        UPDATE <include refid="tb"/>
        set iot_role_name = #{iotRoleName}
        where iot_role_id = #{iotRoleId}
    </update>
</mapper>