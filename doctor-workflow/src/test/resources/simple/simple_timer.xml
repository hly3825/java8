<?xml version="1.0" encoding="utf-8"?>
<!-- 流程开始 -->
<workflow key="simpleFlowTimer" name="简单流程测试">
    <!-- 开始节点 -->
    <start name="开始节点" pointx="50" pointy="100">
        <transition name="开始连线" target="任务节点1" />
    </start>

    <!-- 任务节点 -->
    <task name="任务节点1" value="1" assignee="terminus1" pointx="250" pointy="100">
        <transition name="任务连线1" target="任务节点2" />
    </task>

    <!-- 任务节点 -->
    <task name="任务节点2" value="2" assignee="terminus2" pointx="450" pointy="100" timer="0 1 0 0 0 0">
        <transition name="任务连线2" target="选择节点1" />
    </task>

    <decision name="选择节点1" pointx="150" pointy="100">
        <transition name="选择连线1" expression="${money} &lt;= 500" target="任务节点3" />
        <transition name="选择连线2" expression="" target="结束节点" />
    </decision>

    <!-- 任务节点 -->
    <task name="任务节点3" value="2" assignee="terminus2" pointx="450" pointy="100">
        <transition name="任务连线3" target="结束节点" />
    </task>

    <!-- 结束节点 -->
    <end name="结束节点" pointx="650" pointy="100" />
</workflow>
