<mapper namespace="DoctorWarehouseStockHandler">
    <resultMap id="DoctorWarehouseStockHandlerMap" type="DoctorWarehouseStockHandler">
        <id property="id" column="id"/>
        <result property="handlerType" column="handler_type"/>
        <result property="handlerDate" column="handler_date"/>
        <result property="warehouseId" column="warehouse_id"/>
        <result property="farmId" column="farm_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="tb">
        doctor_warehouse_stock_handler
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        `handler_type`, `handler_date`, `warehouse_id`, `farm_id`, 
        created_at, updated_at
    </sql>

    <sql id="vals">
        #{handlerType}, #{handlerDate}, #{warehouseId}, #{farmId}, 
        now(), now()
    </sql>

    <sql id="criteria">
        <where>
            <if test="handlerType != null">AND `handler_type` = #{handlerType}</if>
            <if test="handlerDate != null">AND `handler_date` = #{handlerDate}</if>
            <if test="warehouseId != null">AND `warehouse_id` = #{warehouseId}</if>
            <if test="farmId != null">AND `farm_id` = #{farmId}</if>
            <if test="createdAt != null">AND <![CDATA[created_at >= #{createdAt}]]> </if>
            <if test="updatedAt != null">AND <![CDATA[updated_at < #{updatedAt}]]> </if>
        </where>
    </sql>

    <insert id="create" parameterType="DoctorWarehouseStockHandler" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <select id="findById" parameterType="long" resultMap="DoctorWarehouseStockHandlerMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByIds" parameterType="list" resultMap="DoctorWarehouseStockHandlerMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <update id="update" parameterType="DoctorWarehouseStockHandler">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="handlerType != null">`handler_type` = #{handlerType},</if>
            <if test="handlerDate != null">`handler_date` = #{handlerDate},</if>
            <if test="warehouseId != null">`warehouse_id` = #{warehouseId},</if>
            <if test="farmId != null">`farm_id` = #{farmId},</if>
            updated_at = now()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM <include refid="tb"/>
        WHERE id = #{id}
    </delete>
    
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <select id="paging" parameterType="map" resultMap="DoctorWarehouseStockHandlerMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY `id` DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="list" parameterType="map" resultMap="DoctorWarehouseStockHandlerMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY `id` DESC
    </select>

</mapper>
